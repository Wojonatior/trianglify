{
    "compilerOptions": {
        "lib": [
            "es2015",
            "es6",
            "esnext",
            "dom"
        ],
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "alwaysStrict": true,
        "outDir": "Documents",
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node",
            "trianglify",
            "gsap"
        ]
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
